@page
@model MyNotebook.Pages.Notes.EditModel
@{
}
<h2>Edit note</h2>

<div class="border container" style="padding:30px">
    <form method="post">
        
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Note.Id"/>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Note.Title"></label>
            </div>
            <div class="col-4">
                <input asp-for="Note.Title" class="form-control" />
            </div>
            <span asp-validation-for="Note.Title" class="text-danger"></span>

        </div>
        <div class="form-group row mt-4">
            <div class="col-4">
                <label asp-for="Note.Content"></label>
            </div>
            <div class="col-4">
                <input asp-for="Note.Content" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Note.Category" class="control-label"></label>
            <select asp-for="Note.CategoryId"
             asp-for="Note.Category"
            class="form-control" 
            asp-items="@Model.CategoriesNames"></select>
        </div>
     
        <div class="form-group row mt-4">
            <div class="col-3 offset-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
